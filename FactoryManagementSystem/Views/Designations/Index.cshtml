@model IEnumerable<FactoryManagementSystem.Data.AdditionUserData.Designation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DesignationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesignationStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DesignationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesignationStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DesignationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DesignationID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DesignationID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
